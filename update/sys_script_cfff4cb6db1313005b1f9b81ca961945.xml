        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var userCountry=current.submitted_by.location.country;
	var lbu=new GlideRecord('x_245925_dxc_docs_local_business_units');
	var fx_rate = new GlideRecord('fx_rate');
	
	// LBU field initialization
	lbu.get('country.name', userCountry);
	current.lbu = lbu.sys_id;
	
	// Local currency field initialization
	current.local_currency = current.lbu.default_currency;
	
	// Exchange rate field initialization
	fx_rate.orderByDesc('created');
	fx_rate.addQuery('currency', current.local_currency);
	fx_rate.query();
	fx_rate.next();
	current.exchange_rate = fx_rate.rate;	
		
})(current, previous);]]></script>
